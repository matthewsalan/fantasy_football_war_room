<section class="defense-results"> 

  <%= render "dashboard/tab" %>

  <ul class="breadcrumb">
    <li>
      <%= link_to "Home Page", root_path %>
    </li>
    <li class="active">Running Backs Standard</li>
  </ul>
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Ranking</h3>
        </div>
        <div class="panel-body">
          Ordered by projected player rankings from SB Nation for 2016 season
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Scoring</h3>
        </div>
        <div class="panel-body">
          Points based off ESPN Standard scoring from 2015 season
        </div>
      </div>
    </div>

     <table class="table table-striped">
    <thead> 
      <tr>
        <th>Rank</th>
        <th>Team</th>
        <th>Points</th>
      </tr>
    </thead>
    <tbody>
      <% @defenses.each do |d| %> 
        <tr>
          <td><%= d.rank %></td>
          <td><%= d.team %></td>
          <td><%= d.points %></td>
        </tr>
      <% end %> 
    </tbody>
  </table> 
