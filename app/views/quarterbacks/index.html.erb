<section class="quarterback-results"> 
  <header>
    <h1 class="h3">Quarterbacks</h1> 
    <div class="SB_ranks">
      <p>* Ordered by projected player rankings from SB Nation for 2016 season</p>
    </div>
    <br />
    <br />
    <div class="ESPN_points">
      <p>* Points based off ESPN Standard scoring</p>
    </div>  
  </header>
  <%= link_to root_path, class: "left-arrow" do %>
    <i class="glyphicon glyphicon-circle-arrow-left"> Back</i>
  <% end %>
   <table class="table table-striped">
    <thead> 
      <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Points</th>
        <th>Team</th>
      </tr>
    </thead>
    <tbody>
      <% @quarterbacks.each do |q| %> 
        <tr>
          <td><%= q.rank %></td>
          <td><%= q.name %></td>
          <td><%= q.points %></td>
          <td><%= q.team %></td>
        </tr>
      <% end %> 
    </tbody>
  </table>
   <%= link_to root_path, class: "left-arrow" do %>
    <i class="glyphicon glyphicon-circle-arrow-left"> Back</i>
  <% end %>
</section>
