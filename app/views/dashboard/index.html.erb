    <h4><%= link_to 'Running Back Standard', std_running_backs_path %></h4>      
    <h4><%= link_to 'Wide Receiver PPR', ppr_wide_receivers_path %></h4>
  </div>

  <div class="col-md-4 col-md-offset-1"> 
    <h4><%= link_to 'Wide Receiver Standard', std_wide_receivers_path %></h4>
    <h4><%= link_to 'Tight End', tight_ends_path %></li></h4>
    <h4><%= link_to 'Kicker', kickers_path %></li></h4>
    <h4><%= link_to 'D/ST', defenses_path %></li></h4>
  </div> 
</div>
